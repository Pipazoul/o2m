## Play/Pause
begin
     prog = irexec
     button = KEY_PLAY
     config = mpc toggle
     repeat = 0
end

begin
     prog = irexec
     button = KEY_PAUSE
     config = mpc toggle
     repeat = 0
end

## Stop
begin
     prog = irexec
     button = KEY_STOP
     config = mpc stop; mpc random off;
     repeat = 0
end


## Piste prÃ©cedente
begin
     prog = irexec
     button = KEY_PREVIOUS
     config = mpc prev
     repeat = 0
end


## Piste suivante
begin
     prog = irexec
     button = KEY_NEXT
     config = mpc next
     repeat = 0
end


## Monter le volume
begin
     prog = irexec
     button = KEY_VOLUMEUP
     config = mpc volume +2
     repeat = 0
end


## Baisser le volume
begin
     prog = irexec
     button = KEY_VOLUMEDOWN
     config = mpc volume -2
     repeat = 0
end


# Mettre/Enlever l'alÃ©atoire
begin
     prog = irexec
     button = KEY_MODE
     config = mpc random
     repeat = 0
end


## Retour rapide
begin
     prog = irexec
     button = KEY_REWIND
     config = mpc seek -00:00:05
     repeat = 1
end


## Avance rapide
begin
     prog = irexec
     button = KEY_FORWARD
     config = mpc seek +00:00:05
     repeat = 1
end

# insert your playlist name between the " "
