## Play/Pause
begin
     prog = irexec
     button = KEY_PLAYPAUSE
     config = mpc toggle
     repeat = 0
end

## Stop
begin
     prog = irexec
     button = KEY_STOP
     config = mpc stop
     repeat = 0
end


## Piste prÃ©cedente
begin
     prog = irexec
     button = KEY_PREVIOUS
     config = mpc prev
     repeat = 0
end


## Piste suivante
begin
     prog = irexec
     button = KEY_NEXT
     config = mpc next
     repeat = 0
end


## Monter le volume
begin
     prog = irexec
     button = KEY_VOLUMEUP
     config = mpc volume +4
     repeat = 1
end


## Baisser le volume
begin
     prog = irexec
     button = KEY_VOLUMEDOWN
     config = mpc volume -4
     repeat = 1
end


# Mettre/Enlever l'alÃ©atoire
begin
     prog = irexec
     button = KEY_MODE
     config = mpc random
     repeat = 0
end


## Retour rapide
begin
     prog = irexec
     button = KEY_A
     config = mpc seek -00:00:05
     repeat = 1
end


## Avance rapide
begin
     prog = irexec
     button = KEY_B
     config = mpc seek +00:00:05
     repeat = 1
end


## Ajouter un repertoire de la collection de mpd dans la playlist
begin
     prog = irexec
     button = KEY_G
     config = mpc ls repertoire | mpc add
     repeat = 0
end

## Mettre Ã  jour la base de donnÃ©e de mpd
begin
     prog = irexec
     button = KEY_I
     config = mpc update
     repeat = 0
end

# insert your playlist name between the " "
begin
        prog = irexec
        button = KEY_1
        config = mpc stop; mpc clear; mpc load "Chef";mpc play;
end

